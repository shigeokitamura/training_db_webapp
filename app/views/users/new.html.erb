<% provide(:title, "Sign up") %>
<div class="container">
  <h1>Sign up</h1> 
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        The form contains <%= pluralize(@user.errors.count, "error") %>.
      </div>
    </div>
  <% end %>
  <%= form_for(@user) do |f| %>
    <div class="form-group">
      <% @user.errors.full_messages_for(:user_id).each do |message| %>
        <p class="text-danger"><%= message %></p>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.label :user_name, "Name" %>
      <%= f.text_field :user_name, class: "form-control",
        required: true, maxlength: 50, pattern: "^[0-9A-Za-z\-\_\.]+$"
      %>
      <small class="text-info">Alphanumeric characters, hyphens, underscores, periods</small>
      <% @user.errors.full_messages_for(:user_name).each do |message| %>
        <p class="text-danger"><%= message %></p>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control", required: true, pattern: "^[0-9A-Za-z]+$" %>
      <% @user.errors.full_messages_for(:password).each do |message| %>
        <p class="text-danger"><%= message %></p>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: "form-control", required: true, pattern: "^[0-9A-Za-z]+$" %>
      <small class="text-info">Alphanumeric, 6 or more characters</small>
      <% @user.errors.full_messages_for(:password_confirmation).each do |message| %>
        <p class="text-danger"><%= message %></p>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.label :age %>
      <%= f.number_field :age, class: "form-control",
        required: true, maxlength: 2, min: 0
      %>
      <% @user.errors.full_messages_for(:age).each do |message| %>
        <p class="text-danger"><%= message %></p>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.label :dept %>
      <%= f.number_field :dept, class: "form-control",
        required: true, maxlength: 2, min: 0
      %>
      <% @user.errors.full_messages_for(:dept).each do |message| %>
        <p class="text-danger"><%= message %></p>
      <% end %>
    </div>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
</div>
