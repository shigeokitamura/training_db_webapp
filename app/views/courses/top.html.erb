<div class="container">
  <h1>Training DB Webapp</h1>
  <%= image_tag 'logo.svg', class: "col-md-4", vspace: 20 %>
  
  <h2>Search</h2>
  <p class="col-md-12"><%= link_to 'All courses', search_path %></p>

  <%= form_tag search_path, method: :get do %>
    <div class="form-group">
      <%= label :keyword, "keyword:", class: "col-md-2" %>
      <%= text_field_tag :keyword, nil, class: "col-md-4" %>
      <%= submit_tag "Submit", class: "btn btn-primary col-md-2" %>
    </div>
  <% end %>
  
  <%= form_tag search_path, method: :get do %>
    <div class="form-group">
      <%= label :category, "category:", class: "col-md-2" %>
      <%= text_field_tag :category, nil, class: "col-md-4" %>
      <%= submit_tag "Submit", class: "btn btn-primary col-md-2" %>
    </div>
  <% end %>

</div>