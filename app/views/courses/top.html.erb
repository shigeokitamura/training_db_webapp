<div class="container">
  <h1>Training DB Webapp</h1>
  <%= image_tag 'logo.svg', class: "col-md-4" %>
  <p>Search</p>
  <p><%= link_to 'all course', search_path %></p>

  <%= form_tag search_path, method: :get do %>
    <div class="form-group">
      <%= label :keyword, "keyword:", class: "col-md-1" %>
      <%= text_field_tag :keyword, nil, class: "col-md-2" %>
      <%= submit_tag "submit", class: "btn btn-primary col-md-1" %>
    </div>
  <% end %>
  
  <%= form_tag search_path, method: :get do %>
    <div class="form-group">
      <%= label :category, "category:", class: "col-md-1" %>
      <%= text_field_tag :category, nil, class: "col-md-2" %>
      <%= submit_tag "submit", class: "btn btn-primary col-md-1" %>
    </div>
  <% end %>

</div>